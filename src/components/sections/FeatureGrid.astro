---
import Icon from "@ui/icons/Icon.astro";

// Content for the section title and subtitle
const title =
  'Why Choose <span class="text-teal-700">Vit</span><span class="font-normal text-slate-400">ally</span>?';
const subTitle =
  "It’s simple to use, secure, and designed for real life. Whether you’re keeping track of your own health or helping a loved one, Vitally makes it easier to stay organized, feel confident, and get the care you need—without the paperwork. Because managing your health shouldn’t be a struggle. Vitally helps you keep all your medical records in one place, so you’re always prepared—at home, at the clinic, or on the go.";

const features = [
  {
    borderClasses: "md:border-l md:border-r",
    gradientClasses: "bg-linear-to-l/oklch from-teal-200 to-transparent",
    icon: "cursorRays",
    heading: "Built for Everyone",
    description:
      " Vitally is made for all ages and all levels of tech comfort. Whether you’re managing your own records or helping a family member, the app is simple, accessible, and easy to use—no tech skills required.",
  },
  {
    borderClasses: "border-b border-t md:border-b-0",
    gridClasses: "md:col-start-2 md:col-end-3",
    gradientClasses: "bg-linear-to-t/oklch from-teal-200 to-transparent",
    icon: "cog",
    heading: "Stay Ready for Any Appointment",
    description:
      "With your records always at your fingertips, you won’t have to worry about forgetting documents or test results. Vitally keeps everything organized so you can walk into any doctor’s office with confidence.",
  },
  {
    borderClasses: "md:border-l md:border-r md:border-t",
    gridClasses: "md:col-end-4",
    gradientClasses: "bg-linear-to-tl/oklch from-teal-200 to-transparent",
    icon: "puzzle",
    heading: "Support When You Need It",
    description:
      "Health can be overwhelming—but you don’t have to do it alone. Vitally helps you stay on top of your records, and makes it easier to share them with family, caregivers, or doctors when it matters most.",
  },
];
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
>
  <div
    class="grid grid-flow-row-dense grid-cols-1 md:grid-cols-3 md:grid-rows-2"
  >
    {/* Section container for the title and subtitle */}
    <div
      class="mx-auto max-w-lg pb-5 text-center md:col-span-2 lg:mx-0 lg:flex-auto lg:text-left"
    >
      <h2
        class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
      >
        <Fragment set:html={title} />
      </h2>
      <p
        class="mt-6 text-start text-lg/8 text-pretty text-slate-700 sm:text-center md:text-start"
      >
        {subTitle}
      </p>
    </div>

    {/* Feature Cards */}
    {
      features &&
        features.map((feature) => (
          <div
            class={`group relative mx-auto flex flex-col border-dashed border-slate-400 py-10 ${feature.borderClasses} ${feature.gridClasses}`}
          >
            <div
              class={`group pointer-events-none absolute inset-0 h-full w-full ${feature.gradientClasses} opacity-0 transition duration-300 group-hover:opacity-100`}
            />
            <div class="relative z-10 mb-4 px-10">
              <Icon name={feature.icon} />
            </div>
            <div class="relative z-10 mb-2 px-10 text-lg font-semibold">
              <span class="inline-block text-balance text-slate-800 transition duration-300 group-hover:translate-x-2">
                {feature.heading}
              </span>
            </div>
            <p class="z-10 max-w-sm px-4 text-sm text-pretty text-slate-700 sm:max-w-lg md:mx-auto">
              {feature.description}
            </p>
          </div>
        ))
    }
  </div>
</section>
